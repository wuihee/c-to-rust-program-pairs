{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Individual Pairs Metadata",
    "description": "Schema for C-to-Rust program pairs.",
    "type": "object",
    "properties": {
        "pair": {
            "type": "array",
            "description": "Array of program pair configurations",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of both C and Rust program"
                    },
                    "description": {
                        "type": "string",
                        "description": "Brief description of the program"
                    },
                    "translation": {
                        "type": "string",
                        "enum": [
                            "manual",
                            "semi-automatic",
                            "automatic"
                        ],
                        "description": "Type of translation process"
                    },
                    "tool": {
                        "type": "string",
                        "description": "The tool used for the translation."
                    },
                    "features": {
                        "type": "string",
                        "enum": [
                            "superset",
                            "subset",
                            "equivalent"
                        ],
                        "description": "Feature relationship to original program"
                    },
                    "c_program": {
                        "type": "object",
                        "description": "The C program",
                        "properties": {
                            "description_url": {
                                "type": "string",
                                "format": "uri",
                                "description": "URL to detailed description or documentation of the C program"
                            },
                            "repo_url": {
                                "type": "string",
                                "format": "uri",
                                "description": "Repository URL for the C program"
                            },
                            "build": {
                                "type": "array",
                                "description": "Build commands",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "test": {
                                "type": "array",
                                "description": "Test commands",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "dependencies": {
                                "type": "array",
                                "description": "Build dependencies",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "source": {
                                "type": "array",
                                "description": "Path to source files.",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "executable": {
                                "type": "string",
                                "description": "Path to compiled executable"
                            }
                        },
                        "required": [
                            "url",
                            "build",
                            "source",
                            "executable"
                        ],
                        "additionalProperties": false
                    },
                    "rust_program": {
                        "type": "object",
                        "description": "The Rust program",
                        "properties": {
                            "description_url": {
                                "type": "string",
                                "format": "uri",
                                "description": "URL to detailed description or documentation of the Rust program"
                            },
                            "repo_url": {
                                "type": "string",
                                "format": "uri",
                                "description": "Repository URL for the Rust program"
                            },
                            "setup": {
                                "type": [
                                    "array",
                                    "null"
                                ],
                                "description": "Setup commands to run before building",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "build": {
                                "type": "array",
                                "description": "Build commands",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "test": {
                                "type": "array",
                                "description": "Test commands",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "dependencies": {
                                "type": "array",
                                "description": "Build dependencies",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "source": {
                                "type": "array",
                                "description": "Paths to source files.",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "executable": {
                                "type": "string",
                                "description": "Path to compiled executable"
                            }
                        },
                        "required": [
                            "url",
                            "build",
                            "source",
                            "executable"
                        ],
                        "additionalProperties": false
                    }
                },
                "required": [
                    "name",
                    "description",
                    "c_program",
                    "rust_program"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "pair"
    ],
    "additionalProperties": false
}